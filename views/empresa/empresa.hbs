<!-- modal empresa-->
<div class="modal modal-lg fade" id="modal_empresa" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true"
    data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Marca</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!--Input modal-->
                <div class="row">
                    <div class="col-6">
                        <label for="empresa_nombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="empresa_nombre" autocomplete="off">
                    </div>
                    <div class="col-6">
                        <label for="empresa_numero_ruc" class="form-label">RUC</label>
                        <input type="text" class="form-control" id="empresa_numero_ruc" autocomplete="off">
                    </div>
                    <div class="col-6">
                        <label for="empresa_rubro" class="form-label">Rubro</label>
                        <input type="text" class="form-control" id="empresa_rubro" autocomplete="off">
                    </div>

                    <div class="col-6">
                        <label for="empresa_direccion" class="form-label">Dirección</label>
                        <input type="text" class="form-control" id="empresa_direccion" autocomplete="off">
                    </div>
                    <div class="col-6">
                        <label for="empresa_telefono" class="form-label">Teléfono</label>
                        <input type="text" class="form-control" id="empresa_telefono" autocomplete="off">
                    </div>
                    <div class="col-6">
                        <label for="empresa_correo" class="form-label">Correo</label>
                        <input type="text" class="form-control" id="empresa_correo" autocomplete="off">
                    </div>
                    <div class="col-12">
                        <label for="empresa_descripcion" class="form-label">Descripción</label>
                        <textarea type="text" class="form-control" id="empresa_descripcion" autocomplete="off"></textarea>
                    </div>
                    <div class="col-12">
                        <label for="empresa_historia" class="form-label">Historia</label>
                        <textarea type="text" class="form-control" id="empresa_historia" autocomplete="off"></textarea>
                    </div>
                </div>
                <!--Input modal end-->
                <!--Mensaje de alerta-->
                <div class="row mt-2">
                    <div class="col-12">
                        <div id="mensajeError" class="alert alert-danger" role="alert"
                            style="margin-bottom: 10px; display: none">
                            A simple danger alert—check it out!
                        </div>
                    </div>
                </div> <!--Mensaje de alerta end-->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button id="btnGuardar" type="button" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
</div> <!-- end modal empresa -->

