<!-- modal empresa_colaborador-->
<div class="modal fade" id="modal_empresa_colaborador" tabindex="-1" aria-labelledby="exampleModalLabel"
  aria-hidden="true" data-bs-backdrop="static">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header bg-dark text-white">
        <h5 class="modal-title" id="exampleModalLabel">Colaborador</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <nav>
          <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <button class="nav-link active" id="nav-datos-tab" data-bs-toggle="tab" data-bs-target="#nav-datos"
              type="button" role="tab" aria-controls="nav-datos" aria-selected="true">Información</button>
            <button class="nav-link" id="nav-imagen-tab" data-bs-toggle="tab" data-bs-target="#nav-imagen" type="button"
              role="tab" aria-controls="nav-imagen" aria-selected="false">Imagen</button>
          </div>
        </nav>
        <!--Input modal-->
        <div class="tab-content" id="nav-tabContent">
          {{!-- Input de datos --}}
          <div class="tab-pane fade show active" id="nav-datos" role="tabpanel" aria-labelledby="nav-datos-tab"
            tabindex="0">
            <div class="row">
              <input type="hidden" id="empresa_colaborador_id">
              <div class="col-12">
                <label for="empresa_colaborador_nombre" class="form-label">Nombre completo</label>
                <input type="text" class="form-control" id="empresa_colaborador_nombre" autocomplete="off">
              </div>
              <div class="col-6">
                <label for="empresa_colaborador_telefono" class="form-label">Teléfono</label>
                <input type="text" class="form-control" id="empresa_colaborador_telefono" autocomplete="off">
              </div>
              <div class="col-6">
                <label for="empresa_colaborador_area" class="form-label">Área</label>
                <input type="text" class="form-control" id="empresa_colaborador_area" autocomplete="off">
              </div>
            </div>
          </div>
          {{!-- Input de imagen video --}}
          <div class="tab-pane fade" id="nav-imagen" role="tabpanel" aria-labelledby="nav-imagen-tab" tabindex="0">
            <div class="col-12">
              <label for="e_colaborador_cargarimage" class="form-label">Subir imagen</label>
              <img style="width: 80%; aspect-ratio: 1.8;" class="rounded mx-auto d-block img-fluid" id="img_colaborador" />
              <input class="form-control mt-2" type="file" width="100%" id="e_colaborador_cargarimage" name="archivo"
                accept="image/png,image/jpg,image/jpeg" />
            </div>
          </div>
          <!--Input modal end-->
        </div>
        <!--Mensaje de alerta-->
        <div class="row mt-2">
          <div class="col-12">
            <div id="mensajeError" class="alert alert-danger" role="alert" style="margin-bottom: 10px; display: none">
              A simple danger alert—check it out!
            </div>
          </div>
        </div> <!--Mensaje de alerta end-->
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
        <button id="btnGuardar" type="button" class="btn btn-primary">Guardar</button>
      </div>
    </div>
  </div>
</div> <!-- end modal empresa_colaborador -->

<!-- Modal para recortar la imagen -->
